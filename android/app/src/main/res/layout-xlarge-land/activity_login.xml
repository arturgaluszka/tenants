<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <ImageView android:src="@drawable/logo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView13" />

        <EditText
            android:id="@+id/EditTextName"
            android:layout_height="wrap_content"
            android:hint=" Login"
            android:inputType="textPersonName"
            android:layout_width="500dp"
            android:background="@drawable/edit_text_style"
            android:layout_below="@+id/imageView13"
            android:layout_centerHorizontal="true">
        </EditText>

        <CheckBox
            android:id="@+id/CheckBoxResponse"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:layout_width="fill_parent"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/editText5"
            android:layout_alignStart="@+id/editText5">
        </CheckBox>

        <TextView android:id="@+id/link_to_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Has no account! Sign up here"
            android:gravity="center"
            android:textSize="30dp"
            android:onClick="register"
            android:textColor="#025f7c"
            android:layout_marginRight="94dp"
            android:layout_marginEnd="94dp"
            android:layout_below="@+id/CheckBoxResponse"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/button2"
            android:layout_below="@+id/link_to_login"
            android:layout_alignLeft="@+id/imageView13"
            android:layout_alignStart="@+id/imageView13"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="38dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_height="wrap_content"
            android:hint=" Password"
            android:inputType="textPersonName"
            android:layout_width="500dp"
            android:background="@drawable/edit_text_style"
            android:layout_below="@+id/EditTextName"
            android:layout_alignLeft="@+id/EditTextName"
            android:layout_alignStart="@+id/EditTextName" />

    </RelativeLayout>
</LinearLayout>