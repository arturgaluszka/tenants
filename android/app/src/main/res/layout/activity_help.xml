<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".settings.others.Help">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="800dp"
            android:layout_height="800dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <EditText
                android:id="@+id/EditTextName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:hint=" Name"
                android:inputType="textPersonName"
                android:layout_above="@+id/EditTextEmail"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"></EditText>

            <EditText
                android:id="@+id/EditTextEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:hint=" Feedback e-mail"
                android:inputType="textEmailAddress"
                android:layout_above="@+id/EditTextFeedbackBody"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"></EditText>

            <EditText
                android:id="@+id/EditTextFeedbackBody"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:autoText="true"
                android:background="@drawable/edit_text_style"
                android:hint=" Describe"
                android:inputType="textMultiLine"
                android:lines="5"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"></EditText>

            <CheckBox
                android:id="@+id/CheckBoxResponse"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Would you like an email response?"
                android:textColor="#238AE1"
                android:layout_below="@+id/EditTextFeedbackBody"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"></CheckBox>

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Send Report"
                android:textColor="#238AE1"
                android:textSize="20sp"
                android:layout_below="@+id/CheckBoxResponse"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="If you find bug in our program, please send us report. "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#238AE1"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor= "#238AE1"
                android:text="Please fill"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/textView14"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
