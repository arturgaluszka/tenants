<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:background="@drawable/popupbackground" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton

        android:layout_width="173px"
        android:layout_height="179px"
        android:id="@+id/imageButton4"
        android:background="@drawable/buy"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toRightOf="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="120dp" />
    <ImageButton
        android:onClick="information"
        android:layout_width="173px"
        android:layout_height="179px"
        android:id="@+id/imageButton3"
        android:background="@drawable/info"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price:"
        android:id="@+id/textView7"
        android:textSize="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_below="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3"
        android:layout_marginTop="20dp"
        android:textColor="#060606" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignRight="@+id/imageButton4"
        android:layout_alignEnd="@+id/imageButton4"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />
</RelativeLayout>
